<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg4"
    android:id="@+id/RelativeLayout1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bgsholat" />

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="210dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lokasi, Waktu :"
            android:textStyle="bold"
            android:gravity="left"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subuh"
            android:textStyle="bold"
            android:gravity="left"
            android:padding="10dp"
            android:textSize="20dp"
            android:paddingTop="15dp"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="20dp"
            android:text="Dzuhur"
            android:textStyle="bold"
            android:gravity="left"
            android:paddingTop="15dp"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="left"
            android:paddingTop="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Ashar"
            android:textStyle="bold"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="left"
            android:paddingTop="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Maghrib"
            android:textStyle="bold"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="left"
            android:paddingTop="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Isya"
            android:textStyle="bold"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="210dp">
        <TextView
            android:id="@+id/tv_lokasi_value"
            android:textColor="#FF3636"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"/>
        <TextView
            android:id="@+id/tv_subuh_value"
            android:textColor="#FF3636"
            android:padding="10dp"
            android:textSize="20dp"
            android:layout_marginLeft="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />
        <TextView
            android:id="@+id/tv_dzuhur_value"
            android:textColor="#FF3636"
            android:padding="10dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:gravity="center" />
        <TextView
            android:id="@+id/tv_ashar_value"
            android:textColor="#FF3636"
            android:padding="10dp"
            android:textSize="20dp"
            android:layout_marginLeft="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />
        <TextView
            android:id="@+id/tv_maghrib_value"
            android:textColor="#FF3636"
            android:padding="10dp"
            android:textSize="20dp"
            android:layout_marginLeft="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_isya_value"
            android:textColor="#FF3636"
            android:padding="10dp"
            android:textSize="20dp"
            android:layout_marginLeft="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>
    </LinearLayout>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_refresh"
            android:src="@drawable/ic_refresh_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />



</RelativeLayout>